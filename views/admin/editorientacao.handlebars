{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3> Editar Orientacao</h3>
<div class="card">
    <div class="card-body">

<form action="/auth/orientacao/edit" method="POST">
    <input type="hidden" name="id" value="{{orientacao._id}}" >
    <label for="nome"> Nome </label>
    <input class="form-control" type="text" id="nome" 
    name="nome" placeholder="Digite o nome da orientacao" value="{{orientacao.nome}}">
    
    <label for="nome"> Orientador: </label>
    <select name="orientador" class="custom-select" required>
        {{#each professores}}
              <option value="{{_id}}">{{nome}}</option>
        {{else}}
              <option value="0">nenhum orientador selecionado</option>
        {{/each}}
    </select>

    <button type="submit" class="btn btn-info mt-4"> Editar orientacao</button>
</form>
</div>
</div>

